{
  "name": "play-ground",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "web:build": "turbo build --filter=./apps/web",
    "dev": "turbo dev",
    "web:dev": "dotenv -- turbo dev --filter=./apps/web",
    "ui:add": "pnpm --filter @repo/ui ui:add",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.12",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5"
  }
}
